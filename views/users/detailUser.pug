extends ../head.pug
block head
    #page-wrapper(style='min-height: 616px;')
        .main-page
            .forms
                    h3.title1 ----------Thông tin user-------------
                    .form-three.widget-shadow
                        form.form-horizontal
                                .form-group
                                    label.col-sm-5.control-label(for="avatar") Avatar
                                    .col-sm-5
                                        img.border.border-success.rounded-lg(src='data:image/png;base64,', width="194",height ="194")
                                .form-group
                                    label.col-sm-5.control-label(for="name") Full Name
                                    .col-sm-5
                                        input#name.form-control.input-sm(disabled='', type="text",name="name",placeholder = users.name)
                                .form-group
                                    label.col-sm-5.control-label(for="phone") Phone
                                    .col-sm-5
                                        input#phone.form-control(disabled='',type="text",name="phone",placeholder = users.phone)
                                .form-group
                                    label.col-sm-5.control-label(for="email") Email
                                    .col-sm-5
                                        input#email.form-control(disabled='',type="email",name="email",placeholder = users.email)
                                .form-group
                                    label.col-sm-5.control-label(for="password") Password
                                    .col-sm-5
                                        input#password.form-control(disabled='',type="password",name="password", placeholder = users.password)
                                .form-group
                                    label.col-sm-5.control-label(for="address") Address
                                    .col-sm-5
                                        input#address.form-control(disabled='',type="text",name="address", placeholder = users.address)
                                .col-sm-10
                                    a.btn.btn-success(href='/account/edit') sửa
                                    br
                                    br
                                    a.btn.btn-primary(href='/') Quay lại
